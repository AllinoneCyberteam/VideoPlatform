<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".CategorySelection">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="191dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="404dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ent_id"
                    android:layout_width="179dp"
                    android:layout_height="144dp"
                    android:onClick="onClick"
                    app:srcCompat="@drawable/adev" />

                <TextView
                    android:id="@+id/entt_id"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Android Development"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="21sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/info_id"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/wdev" />

                <TextView
                    android:id="@+id/infot_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Web Development"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="195dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/news_id"
                    android:layout_width="183dp"
                    android:layout_height="156dp"
                    android:onClick="onClick"
                    app:srcCompat="@drawable/ml" />

                <TextView
                    android:id="@+id/newst_id"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:text="Machine Learning"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tech_id"
                    android:layout_width="match_parent"
                    android:layout_height="156dp"
                    android:onClick="onClick"
                    app:srcCompat="@drawable/market" />

                <TextView
                    android:id="@+id/techt_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Marketing"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>